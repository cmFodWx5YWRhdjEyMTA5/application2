<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_8"
    android:paddingTop="@dimen/dp_8"
    android:paddingRight="@dimen/dp_8"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.example.dingdong.widget.LogImageView
        android:id="@+id/erp_goods_describe_image"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80" />


    <com.example.dingdong.widget.LogTextView
        android:id="@+id/erp_goods_describe_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/erp_goods_describe_image"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toRightOf="@id/erp_goods_describe_image"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/sp_16"
        android:text="商品描述:机械" />

    <LinearLayout
        android:id="@+id/erp_goods_price_layout"
        android:layout_above="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignLeft="@id/erp_goods_describe_tv"
        android:layout_below="@id/erp_goods_describe_tv"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="bottom"

        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/erp_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_horizontal_2x"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_16"
            android:drawablePadding="@dimen/dp_8"
            android:text="0.00"
            android:textColor="@color/erp_goods_item_price_color"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/erp_goods_describe_image"
        android:layout_alignLeft="@id/erp_goods_price_layout"
        android:layout_marginBottom="2dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:text=""
            android:visibility="gone"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/erp_goods_item_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:text="0"
            android:visibility="gone"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <com.example.dingdong.widget.LogImageView
        android:id="@+id/erp_add_goods_iv"
        android:layout_width="@dimen/activity_horizontal_2x"
        android:layout_height="@dimen/activity_horizontal_2x"
        android:layout_alignBottom="@+id/ll"
        android:layout_alignRight="@+id/erp_goods_describe_tv"
        android:clipChildren="false"
        android:scaleType="center"
        android:src="@drawable/erp_add_goods_click" />
    </RelativeLayout>
</RelativeLayout>