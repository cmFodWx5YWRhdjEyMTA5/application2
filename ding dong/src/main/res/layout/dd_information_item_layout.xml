<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        wave:cardElevation="@dimen/dp_2"
        wave:cardCornerRadius="@dimen/dp_6"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mobile_fixed_left_iv"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    wave:border_overlay="true"/>

                <com.example.dingdong.widget.LogImageView
                    android:id="@+id/cart_vip_logo_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mobile_fixed_left_iv"
                    android:layout_alignRight="@id/mobile_fixed_left_iv"
                    android:visibility="gone" />
                <com.example.dingdong.widget.LogTextView
                    android:id="@+id/mobile_fixed_right_top_pv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mobile_fixed_left_iv"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/text_black_color"
                    />

                <com.example.dingdong.widget.LogTextView
                    android:id="@+id/mobile_fixed_center_top_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mobile_fixed_left_iv"
                    android:layout_toRightOf="@id/mobile_fixed_left_iv"
                    android:layout_toLeftOf="@id/mobile_fixed_right_top_pv"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_black_color"
                    android:lines="1"
                    />

                <com.example.dingdong.widget.LogTextView
                    android:id="@+id/mobile_fixed_center_bottom_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mobile_fixed_left_iv"
                    android:layout_toRightOf="@id/mobile_fixed_left_iv"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_black_color"
                    />


                <com.example.dingdong.widget.LogTextView
                    android:id="@+id/mobile_fixed_right_bottom_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/mobile_fixed_left_iv"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/text_black_color"
                    android:gravity="right"
                    android:layout_toRightOf="@id/mobile_fixed_center_bottom_tv"
                    android:lines="1"
                    android:ellipsize="middle"
                    android:layout_marginLeft="@dimen/dp_16"
                    />
            </RelativeLayout>
            <com.example.dingdong.widget.LogTextView
                android:id="@+id/information_theme_message_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text_black_color"
                android:background="@color/white"
                android:textSize="@dimen/sp_14"
                />
            <com.example.dingdong.widget.FrescoView
                android:id="@+id/information_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>